---
import { logos } from 'virtual:starlight/user-images';
import config from 'virtual:starlight/user-config';
const { siteTitleHref } = Astro.locals.starlightRoute;
---

<a href={siteTitleHref} class="site-title sl-flex">
	{
		config.logo && logos.dark && (
			<>
				<img
					class:list={{ 'site-logo': true, 'light:sl-hidden print:hidden': !('src' in config.logo) }}
					alt={config.logo.alt}
					src={logos.dark.src}
					width={logos.dark.width}
					height={logos.dark.height}
				/>
				{!('src' in config.logo) && (
					<img
						class="site-logo dark:sl-hidden print:block"
						alt={config.logo.alt}
						src={logos.light?.src}
						width={logos.light?.width}
						height={logos.light?.height}
					/>
				)}
			</>
		)
	}
	<span class="site-title-text" translate="no">Docs</span>
	<span class="sr-only" translate="no">SuperPlane Docs</span>
</a>

<style>
	@layer starlight.user {
		.site-title {
			align-items: center;
			gap: 12px;
			font-size: var(--sl-text-h4);
			font-weight: 500;
			color: var(--sl-color-text-accent);
			text-decoration: none;
			white-space: nowrap;
			min-width: 0;
		}
		.site-title-text {
			font-size: 1.25rem;
			color: var(--sl-color-gray-3);
		}
		span {
			overflow: hidden;
		}
		img {
			height: calc(var(--sl-nav-height) - 2 * var(--sl-nav-pad-y));
			width: auto;
			max-width: 150px;
			margin-bottom: -4px !important;
			object-fit: contain;
			object-position: 0 50%;
		}
		:global([data-theme='dark']) .site-title .site-logo {
			filter: invert(1) brightness(1.1);
		}
	}
</style>
